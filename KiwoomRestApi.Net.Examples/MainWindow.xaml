<Window x:Class="KiwoomRestApi.Net.Examples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KiwoomRestApi.Net.Examples"
        mc:Ignorable="d"
        Title="KiwoomRestApi.Net Examples - WPF" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <TextBlock Text="🚀 KiwoomRestApi.Net Examples" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock x:Name="StatusText" Text="Initializing..." FontSize="12" Foreground="White" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Controls -->
        <Border Grid.Row="1" Background="#f5f5f5" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Stock Code:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="StockCodeTextBox" Text="005930" Width="100" Height="25" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="TestConnectionBtn" Content="🔗 Test Connection" Click="TestConnection_Click" Margin="5" Padding="10,5" Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                    <Button x:Name="GetStockInfoBtn" Content="📊 Stock Info" Click="GetStockInfo_Click" Margin="5" Padding="10,5" Background="#2196F3" Foreground="White" BorderThickness="0"/>
                    <Button x:Name="GetTradeInfoBtn" Content="📈 Trade Info" Click="GetTradeInfo_Click" Margin="5" Padding="10,5" Background="#FF9800" Foreground="White" BorderThickness="0"/>
                    <Button x:Name="GetChartBtn" Content="📉 Chart" Click="GetChart_Click" Margin="5" Padding="10,5" Background="#9C27B0" Foreground="White" BorderThickness="0"/>
                    <Button x:Name="DebugBtn" Content="🔧 Debug" Click="Debug_Click" Margin="5" Padding="10,5" Background="#F44336" Foreground="White" BorderThickness="0"/>
                    <Button x:Name="ClearBtn" Content="🗑️ Clear" Click="Clear_Click" Margin="5" Padding="10,5" Background="#607D8B" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Results -->
        <Border Grid.Row="2" Margin="20" BorderBrush="#ddd" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Background="#f9f9f9" Padding="10">
                    <TextBlock Text="Results" FontSize="16" FontWeight="Bold"/>
                </Border>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBox x:Name="ResultsTextBox" 
                             Background="White" 
                             BorderThickness="0" 
                             IsReadOnly="True" 
                             TextWrapping="Wrap" 
                             FontFamily="Consolas" 
                             FontSize="12" 
                             Margin="10"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
