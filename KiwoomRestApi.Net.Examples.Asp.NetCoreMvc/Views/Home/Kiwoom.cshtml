            const response = await fetch(`/api/kiwoom/tradeinfo/${stockCode}`);
            const data = await response.json();
            displayResult(data);
        } catch (error) {
            displayError(error.message);
        } finally {
            hideLoading();
        }
    }
    
    async function getChart() {
        const stockCode = document.getElementById('stockCode').value;
        if (!stockCode) {
            alert('Please enter a stock code');
            return;
        }
        
        showLoading();
        try {
            const response = await fetch(`/api/kiwoom/chart/${stockCode}`);
            const data = await response.json();
            displayResult(data);
        } catch (error) {
            displayError(error.message);
        } finally {
            hideLoading();
        }
    }
    
    async function debugStockInfo() {
        const stockCode = document.getElementById('stockCode').value;
        if (!stockCode) {
            alert('Please enter a stock code');
            return;
        }
        
        showLoading();
        try {
            const response = await fetch(`/api/kiwoom/debug/${stockCode}`);
            const data = await response.json();
            displayResult(data);
        } catch (error) {
            displayError(error.message);
        } finally {
            hideLoading();
        }
    }
</script>